<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="30dp">

            <TextView
                android:id="@+id/channel_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="채널 이름"
                android:textSize="24sp"
                android:textStyle="bold">

            </TextView>

            <EditText
                android:id="@+id/channel_title_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="채널 이름을 적어주세요">

            </EditText>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/channel_content_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="채널 설명"
                android:textSize="24sp"
                android:textStyle="bold">

            </TextView>

            <EditText
                android:id="@+id/channel_content_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="채널 설명을 적어주세요">

            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="채널 공개 여부"
                android:textSize="24sp"
                android:textStyle="bold">

            </TextView>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="UseSwitchCompatOrMaterialXml">

            </Switch>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/colorpick"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:onClick="pickColor">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="색상을 선택하세요"
                    android:layout_gravity="center">

                </TextView>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <Button
            android:id="@+id/add_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>